{
  "version": 2,
  "builds": [
    {
      "src": "app/package.json",
      "use": "@vercel/vite",
      "config": {
        "project": "app"
      }
    },
    {
      "src": "server/backend/src/index.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server/backend/src/index.ts"
    },
    {
      "src": "/(.*)",
      "dest": "app"
    }
  ]
}
